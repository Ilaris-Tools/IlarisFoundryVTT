{{#each actor.inventar.item_list as |itemContainer key|}}
<h2>{{itemContainer.name}}</h2>
<a class="item-edit icon-small" data-itemid="{{itemContainer.id}}"><i class="fas fa-edit"></i></a>
<a class="item-delete icon-small" data-itemid="{{itemContainer.id}}"
    ><i class="fas fa-trash"></i
></a>
<div class="flexrow">
    <label><b>Name</b></label>
    {{#if ../isWeaponSpaceRequirementActive}}
        <label><b>{{get_label "gewicht"}}</b></label>
        <label class="{{#if (ifGt itemContainer.system.gewicht_summe (multMinusOne itemContainer.system.gewicht))}}maximum-load-exceeded-left{{/if}}"><b>{{itemContainer.system.gewicht_summe}}</b></label>
        <label class="{{#if (ifGt itemContainer.system.gewicht_summe (multMinusOne itemContainer.system.gewicht))}}maximum-load-exceeded-middle{{/if}}"><b>/</b></label>
        <label class="{{#if (ifGt itemContainer.system.gewicht_summe (multMinusOne itemContainer.system.gewicht))}}maximum-load-exceeded-right{{/if}}"><b>{{multMinusOne itemContainer.system.gewicht}}</b></label>
    {{/if}}
    <label class="icon-small"></label>
    <label class="icon-small"></label>
</div>
<div class="twokindrow">
    {{#each itemContainer.system.bewahrt_auf as |item key|}}
    <div class="flexrow">
        <label>{{item.name}}</label>
        {{#if ../../isWeaponSpaceRequirementActive}}
            <label>{{item.system.gewicht}}</label>
        {{/if}}
        <label></label>
        <label></label>
        <label></label>
        <a class="item-edit icon-small" data-itemid="{{item.id}}"><i class="fas fa-edit"></i></a>
        <a class="item-delete icon-small" data-itemid="{{item.id}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
</div>
<br />
{{/each}}
