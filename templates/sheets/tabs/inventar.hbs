{{log 'inventar' this}}
<div class="flexrow">
    <label>Dukaten</label>
    <input
        name="system.geld.dukaten"
        value="{{actor.system.geld.dukaten}}"
        type="text"
        data-dtype="Number"
    />
    <label>Silbertaler</label>
    <input
        name="system.geld.silbertaler"
        value="{{actor.system.geld.silbertaler}}"
        type="text"
        data-dtype="Number"
    />
    <label>Heller</label>
    <input
        name="system.geld.heller"
        value="{{actor.system.geld.heller}}"
        type="text"
        data-dtype="Number"
    />
    <label>Kreuzer</label>
    <input
        name="system.geld.kreuzer"
        value="{{actor.system.geld.kreuzer}}"
        type="text"
        data-dtype="Number"
    />
    <button class="clickable" data-clicktype="shorten_money" type="button">
        Geld zusammenrechnen
    </button>
</div>

<br />

<a class="item-create" data-itemclass="gegenstand"><i class="fas fa-plus"></i>Neuer Gegenstand</a>

<h2>Tragend</h2>
<!-- (Gewicht wird nicht berücksichtigt) -->
<div class="flexrow">
    <label><b>Name</b></label>
    <label><b>{{get_label "gewicht"}}</b></label>
    <label class="icon-small"></label>
    <label class="icon-small"></label>
</div>
<div class="twokindrow">
    {{#each actor.inventar.tragend as |item key|}}
    <div class="flexrow">
        <label>{{item.name}}</label>
        <label>{{item.system.gewicht}}</label>
        <a class="item-edit icon-small" data-itemid="{{item.id}}"><i class="fas fa-edit"></i></a>
        <a class="item-delete icon-small" data-itemid="{{item.id}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
</div>

<br />

<h2>Mitführend</h2>
<!-- (Gewicht wird nicht berücksichtigt) -->
<div class="flexrow">
    <label><b>Name</b></label>
    <label><b>{{get_label "gewicht"}}</b></label>
    <label><b>{{actor.system.getragen}}</b></label>
    <label><b>/</b></label>
    <label><b>{{actor.system.abgeleitete.traglast}}</b></label>
    <label><b>({{actor.system.abgeleitete.traglast_intervall}})</b></label>
    <label class="icon-small"></label>
    <label class="icon-small"></label>
</div>
<div class="twokindrow">
    {{#each actor.inventar.mitfuehrend as |item key|}}
    <div class="flexrow">
        <label>{{item.name}}</label>
        <label>{{item.system.gewicht}}</label>
        <label></label>
        <label></label>
        <label></label>
        <label></label>
        <a class="item-edit icon-small" data-itemid="{{item.id}}"><i class="fas fa-edit"></i></a>
        <a class="item-delete icon-small" data-itemid="{{item.id}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
</div>

<br />

{{#each actor.inventar.item_list as |itemContainer key|}}
<h2>{{itemContainer.name}}</h2>
<a class="item-edit icon-small" data-itemid="{{itemContainer.id}}"><i class="fas fa-edit"></i></a>
<a class="item-delete icon-small" data-itemid="{{itemContainer.id}}"
    ><i class="fas fa-trash"></i
></a>
<div class="flexrow">
    <label><b>Name</b></label>
    <label><b>{{get_label "gewicht"}}</b></label>
    <label><b>{{itemContainer.system.gewicht_summe}}</b></label>
    <label><b>/</b></label>
    <label><b>{{multMinusOne itemContainer.system.gewicht}}</b></label>
    <label class="icon-small"></label>
    <label class="icon-small"></label>
</div>
<div class="twokindrow">
    {{#each itemContainer.system.bewahrt_auf as |item key|}}
    <div class="flexrow">
        <label>{{item.name}}</label>
        <label>{{item.system.gewicht}}</label>
        <label></label>
        <label></label>
        <label></label>
        <a class="item-edit icon-small" data-itemid="{{item.id}}"><i class="fas fa-edit"></i></a>
        <a class="item-delete icon-small" data-itemid="{{item.id}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
</div>
<br />
{{/each}}
