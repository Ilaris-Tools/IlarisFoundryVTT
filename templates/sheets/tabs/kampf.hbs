                <label>{{fwaffe.system.fertigkeit}}</label>
            </div>
            <div>
                <label><b>Talent:</b></label>
                <label>{{fwaffe.system.talent}}</label>
            </div>
            <div>
                <label><b>Eigenschaften:</b></label>
                <label>{{waffeneigenschaften_string this}}</label>
            </div>
            <div>
                <label><b>WM:</b></label>
                <label>{{fwaffe.system.wm_fk}}</label>
            </div>
            <div>
                <label><b>Härte:</b></label>
                <label>{{fwaffe.system.haerte}}</label>
            </div>
            <div>
                <label><b>Beschädigung:</b></label>
                <label>{{fwaffe.system.beschaedigung}}</label>
            </div>
            <div>
                <label><b>Beschreibung:</b></label>
                <br />
                <label style="white-space: pre-line">{{fwaffe.system.text}}</label>
            </div>
            <hr />
        </div>
        {{/each}}
    </div>
    <br />

    <h2>Rüstungen</h2>
    <a class="item-create" data-itemclass="ruestung">
        <i class="fas fa-plus"></i>
        Neue Rüstung
    </a>
    <div>
        <div class="flexrow">
            <h6 class="icon-small"><i class="fas fa-shield-alt"></i></h6>
            <h6>Name</h6>
            <h6>RS</h6>
            <h6>BE</h6>
            <h6>Bein</h6>
            <h6>l. Arm</h6>
            <h6>r. Arm</h6>
            <h6>Bauch</h6>
            <h6>Brust</h6>
            <h6>Kopf</h6>
            <h6 class="icon-small"></h6>
            <h6 class="icon-small"></h6>
        </div>
        {{#each actor.ruestungen as |ruestung key|}}
        <div class="flexrow">
            <a
                class="icon-small item-toggle {{ruestung.system.aktiv}}"
                data-itemid="{{ruestung.id}}"
                data-toggletype="aktiv"
            >
                <i class="fas fa-shield-alt"></i>
            </a>
            <label>{{ruestung.name}}</label>
            <label>{{ruestung.system.rs}}</label>
            <label>{{ruestung.system.be}}</label>
            <label>{{ruestung.system.rs_beine}}</label>
            <label>{{ruestung.system.rs_larm}}</label>
            <label>{{ruestung.system.rs_rarm}}</label>
            <label>{{ruestung.system.rs_bauch}}</label>
            <label>{{ruestung.system.rs_brust}}</label>
            <label>{{ruestung.system.rs_kopf}}</label>
            <a
                class="item-edit icon-small"
                data-itemclass="ruestung"
                data-itemid="{{ruestung.id}}"
                style="float: right"
            >
                <i class="fas fa-edit"></i>
            </a>
            <a
                class="item-delete icon-small"
                data-itemclass="ruestung"
                data-itemid="{{ruestung.id}}"
                style="float: right"
            >
                <i class="fas fa-trash"></i>
            </a>
        </div>
        {{/each}}
        <hr />
        <div class="flexrow">
            <label class="icon-small"></label>
            <label>Gesamt (WS*)</label>
            <label>{{actor.system.abgeleitete.ws_stern}}</label>
            <label>{{actor.system.abgeleitete.be}}</label>
            <label>{{actor.system.abgeleitete.ws_beine}}</label>
            <label>{{actor.system.abgeleitete.ws_larm}}</label>
            <label>{{actor.system.abgeleitete.ws_rarm}}</label>
            <label>{{actor.system.abgeleitete.ws_bauch}}</label>
            <label>{{actor.system.abgeleitete.ws_brust}}</label>
            <label>{{actor.system.abgeleitete.ws_kopf}}</label>
            <label class="icon-small"></label>
            <label class="icon-small"></label>
        </div>
    </div>
    <br />

    <h2>Vorteile</h2>
    {{#if actor.vorteil.kampf}}
    <div>
        <label>
            <b>Kampfvorteile:</b>
            &nbsp; | &nbsp;
        </label>
        {{#each actor.vorteil.kampf}}
        <a class="item-edit" data-itemid="{{this.id}}">{{this.name}}</a>
        <a class="item-delete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
        &nbsp; | &nbsp; {{/each}}
    </div>
    {{/if}} {{#if actor.vorteil.kampfstil}}
    <div>
        <label>
            <b>Kampfstile:</b>
            &nbsp; | &nbsp;
        </label>
        {{#each actor.vorteil.kampfstil}}
        <a class="item-edit" data-itemid="{{this.id}}">{{this.name}}</a>
        <a class="item-delete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
        &nbsp; | &nbsp; {{/each}}
    </div>
    {{/if}}
</div>
