{{log 'kampf' this}}
<div>
    {{#if actor.system.modifikatoren.nahkampfmod}}
    <div class="flexrow" style="float: right">
        <b>
            <label style="color: {{modColor actor.system.modifikatoren.nahkampfmod}}">
                {{actor.system.abgeleitete.nahkampfmoddisplay}}
            </label>
        </b>
    </div>
    {{/if}}
    <h2>Nahkampfwaffen</h2>
    <a class="item-create" data-itemclass="nahkampfwaffe">
        <i class="fas fa-plus"></i>
        Neue Nahkampfwaffe
    </a>
    <div>
        <select class="selected-kampfstil" name="system.misc.selected_kampfstil">
            {{selectOptions actor.misc.kampfstile_list selected=actor.system.misc.selected_kampfstil
            valueAttr='key' labelAttr='name' }}
        </select>
    </div>
    <div>
        <div class="flexrow">
            <label class="icon-small"></label>
            <label class="icon-small"><b>HW</b></label>
            <label class="icon-small"><b>NW</b></label>
            <label><b>Name</b></label>
            <label><b>RW</b></label>
            <label><b>AT</b></label>
            <label><b>VT</b></label>
            <label><b>Schaden</b></label>
            <label class="icon-small" style="float: right"></label>
            <label class="icon-small" style="float: right"></label>
        </div>
        {{#each actor.nahkampfwaffen as |nwaffe key|}}
        <div class="flexrow">
            <a class="rollable icon-small" data-rolltype="angriff_diag" data-itemid="{{nwaffe.id}}">
                <i class="fas fa-dice-d20"></i>
            </a>
            <a
                class="icon-small item-toggle {{nwaffe.system.hauptwaffe}}"
                data-itemid="{{nwaffe.id}}"
                data-toggletype="hauptwaffe"
            >
                <i class="far fa-hand-paper"></i>
            </a>
            <a
                class="icon-small item-toggle {{nwaffe.system.nebenwaffe}}"
                data-itemid="{{nwaffe.id}}"
                data-toggletype="nebenwaffe"
            >
                <i class="far fa-hand-paper"></i>
            </a>
            <label class="ausklappen-trigger onhover" data-ausklappentarget="{{nwaffe.id}}">
                {{nwaffe.name}}
            </label>
            <label>{{nwaffe.system.rw}}</label>
            <label
                class="rollable onhover"
                data-rolltype="at"
                data-pw="{{nwaffe.system.at}}"
                data-item="{{nwaffe.name}}"
                data-itemid="{{nwaffe.id}}"
            >
                {{nwaffe.system.at}}
            </label>
            <label
                class="rollable onhover"
                data-rolltype="vt"
                data-pw="{{nwaffe.system.vt}}"
                data-item="{{nwaffe.name}}"
                data-itemid="{{nwaffe.id}}"
            >
                {{nwaffe.system.vt}}
            </label>
            <label
                class="rollable onhover"
                data-rolltype="schaden"
                data-pw="{{nwaffe.system.schaden}}"
                data-item="{{nwaffe.name}}"
                data-itemid="{{nwaffe.id}}"
            >
                {{nwaffe.system.schaden}}
            </label>
            <a
                class="item-edit icon-small"
                data-itemclass="nahkampfwaffe"
                data-itemid="{{nwaffe.id}}"
                style="float: right"
            >
                <i class="fas fa-edit"></i>
            </a>
            <a
                class="item-delete icon-small"
                data-itemclass="nahkampfwaffe"
                data-itemid="{{nwaffe.id}}"
                style="float: right"
            >
                <i class="fas fa-trash"></i>
            </a>
        </div>
        <div id="ausklappen-view-{{nwaffe.id}}" style="display: none">
            <hr />
            <div>
                <label><b>Schaden:</b></label>
                <label>{{nwaffe.system.schaden}}</label>
            </div>
            <div>
                <label><b>Fertigkeit:</b></label>
                <label>{{nwaffe.system.fertigkeit}}</label>
            </div>
            <div>
                <label><b>Talent:</b></label>
                <label>{{nwaffe.system.talent}}</label>
            </div>
            <div>
                <label><b>Eigenschaften:</b></label>
                <label>{{waffeneigenschaften_string nwaffe}}</label>
            </div>
            <div>
                <label><b>WM:</b></label>
                <label>{{nwaffe.system.wm_at}}</label>
                <label><b>/</b></label>
                <label>{{nwaffe.system.wm_vt}}</label>
            </div>
            <div>
                <label><b>Härte:</b></label>
                <label>{{nwaffe.system.haerte}}</label>
            </div>
            <div>
                <label><b>Beschädigung:</b></label>
                <label>{{nwaffe.system.beschaedigung}}</label>
            </div>
            <div>
                <label><b>Beschreibung:</b></label>
                <br />
                <label style="white-space: pre-line">{{nwaffe.system.text}}</label>
            </div>
            <hr />
        </div>
        {{/each}}
    </div>
    <br />

    <h2>Fernkampfwaffen</h2>
