<h2>Fertigkeiten</h2>
<a class="item-create" data-itemclass="uebernatuerliche_fertigkeit"><i class="fas fa-plus"></i>Neue Übernatürliche
    Fertigkeit</a>
    <div>
        <div class="flexrow">
            <label class="icon-small"></label>
            <label><b>Fertigkeit</b></label>
            <label><b>Attribute</b></label>
            <label><b>Basis</b></label>
            <label class="flex-fest-var" style="flex-basis: 40px"><b>FW</b></label>
            <label><b>PW</b></label>
            <label class="icon-small"></label>
            <label class="icon-small"></label>
        </div>
        <div class="twokindrow">
            {{#each actor.uebernatuerlich.fertigkeiten as |uefert|}} {{key}}
            <div>
                <div class="flexrow">
                    <label class="ausklappen-trigger onhover" data-ausklappentarget="{{uefert.id}}">{{uefert.name}}</label>
                    <label>{{AttributeFertigkeit_from_data uefert.system}}</label>
                    <label>{{uefert.system.basis}}</label>
                    <label>{{uefert.system.fw}}</label>
                    <label class="rollable onhover" data-rolltype="uebernatuerliche_fertigkeit"
                        data-fertigkeit="{{uefert.name}}" data-pw="{{uefert.system.pw}}">{{uefert.system.pw}}</label>
                    <a class="item-edit" data-itemclass="uebernatuerliche_fertigkeit" data-itemid="{{uefert.id}}"><i
                            class="fas fa-edit"></i></a>
                    <a class="item-delete" data-itemclass="uebernatuerliche_fertigkeit" data-itemid="{{uefert.id}}"><i
                            class="fas fa-trash"></i></a>
                </div>
                <div id="ausklappen-view-{{uefert.id}}" style="display: none">
                    <label style="white-space: pre-line">{{uefert.system.text}}</label>
                </div>
    
            </div>
            {{/each}}
        </div>
    </div>
<br />
    <h2>Talente</h2>
    <a class="item-create" data-itemclass="zauber"><i class="fas fa-plus"></i>Neuer Zauber</a>
    <a class="item-create" data-itemclass="liturgie"><i class="fas fa-plus"></i>Neue Liturgie</a>
