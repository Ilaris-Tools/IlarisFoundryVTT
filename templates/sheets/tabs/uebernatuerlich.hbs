                        </div>
                        <div>
                            <label><b>Modifikationen: </b></label>
                            <label style="white-space: pre-line">{{magtal.system.modifikationen}}</label>
                        </div>
                        <div>
                            <label><b>Ziel: </b></label>
                            <label>{{magtal.system.ziel}}</label>
                        </div>
                        <div>
                            <label><b>Beschreibung: </b></label>
                            <label style="white-space: pre-line">{{magtal.system.text}}</label>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
            {{/each}}
            <div>
                {{#each actor.uebernatuerlich.liturgien as |kartal|}}
                <div class="flexrow">
                    <a class="rollable icon-small" data-rolltype="karma_diag" data-itemid="{{kartal.id}}"><i
