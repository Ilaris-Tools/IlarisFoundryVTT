                        </div>
                        <div>
                            <label><b>Beschreibung: </b></label>
                            <label style="white-space: pre-line">{{kartal.system.text}}</label>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
            {{/each}}
        </div>

