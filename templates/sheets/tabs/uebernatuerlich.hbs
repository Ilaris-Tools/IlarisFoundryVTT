        <div class="flexrow">
            <label class="icon-small"></label>
            <label><b>Talent</b></label>
            <label><b>Vorbereitung</b></label>
            <label><b>Reichweite</b></label>
            <label><b>Wirkungsd</b></label>
            <label><b>Kosten</b></label>
            <label class="flex-fest-var" style="flex-basis: 40px"><b>PW</b></label>
            <label class="icon-small"></label>
            <label class="icon-small"></label>
        </div>
        <div class="twokindrow">
            {{#each actor.uebernatuerlich.zauber as |magtal|}}
            <div>
                <div class="flexrow">
                    <a class="rollable icon-small" data-rolltype="magie_diag" data-itemid="{{magtal.id}}"><i
                            class="custom-icon"></i></a>
                    <label class="ausklappen-trigger onhover" data-ausklappentarget="{{magtal.id}}">{{magtal.name}}</label>
                    <label>{{magtal.system.vorbereitung}}</label>
                    <label>{{magtal.system.reichweite}}</label>
                    <label>{{magtal.system.wirkungsdauer}}</label>
                    <label>{{magtal.system.kosten}}</label>
                    <label class="rollable onhover" data-rolltype="zauber" data-talent="{{magtal.name}}"
                        data-pw="{{magtal.system.pw}}">{{magtal.system.pw}}</label>
                    <a class="item-edit" data-itemclass="zauber" data-itemid="{{magtal.id}}"><i class="fas fa-edit"></i></a>
                    <a class="item-delete" data-itemclass="zauber" data-itemid="{{magtal.id}}"><i class="fas fa-trash"></i></a>
                </div>
                <div id="ausklappen-view-{{magtal.id}}" style="display: none">
                    <hr />
                    <div>
                        <div>
                            <label><b>Mächtige Magie: </b></label>
                            <label style="white-space: pre-line">{{magtal.system.maechtig}}</label>
                        </div>
                        <div>
                            <label><b>Schwierigkeit: </b></label>
