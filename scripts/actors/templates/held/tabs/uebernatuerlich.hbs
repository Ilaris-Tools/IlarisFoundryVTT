{{log 'ue' this}}
<section class="tab uebernatuerlich {{tab.cssClass}}" data-group="primary" data-tab="uebernatuerlich">
    <h2>Fertigkeiten</h2>
    {{#if (or actor.vorteil.zaubertraditionen actor.vorteil.geweihtentradition actor.vorteil.tiergeist)}}
    <div>
        <label><b>Aktive Übernatürliche Tradition:</b></label>
        <select class="selected-uebernatuerlicher-stil" name="system.misc.selected_uebernatuerlicher_stil">
            {{selectOptions actor.misc.uebernatuerliche_stile_list
            selected=actor.system.misc.selected_uebernatuerlicher_stil valueAttr="key" labelAttr="name"}}
        </select>
    </div>
    {{/if}}
    <a data-action="itemCreate" data-itemclass="uebernatuerliche_fertigkeit">
        <i class="fas fa-plus"></i> Neue Übernatürliche Fertigkeit
    </a>
    <table class="table hero-table-free-fertigkeiten">
        <thead>
            <tr>
                <th class="icon-small"></th>
                <th>Fertigkeit</th>
                <th>Attribute</th>
                <th>Basis</th>
                <th class="hero-table-col-fixed-40">FW</th>
                <th>PW</th>
                <th class="icon-small"></th>
                <th class="icon-small"></th>
            </tr>
        </thead>
        <tbody>
            {{#each actor.uebernatuerlich.fertigkeiten as |uefert|}}
            <tr class="main-row">
                <td></td> <!-- Leer für Icon, falls benötigt -->
                <td>
                    <label data-action="ausklappView" class="onhover" data-ausklappentarget="{{uefert.id}}">
                        {{uefert.name}}
                    </label>
                </td>
                <td>{{AttributeFertigkeit_from_data uefert.system}}</td>
                <td>{{uefert.system.basis}}</td>
                <td>{{uefert.system.fw}}</td>
                <td data-action="rollable" class="onhover" data-rolltype="uebernatuerliche_fertigkeit" data-fertigkeit="{{uefert.name}}" data-pw="{{uefert.system.pw}}">
                    {{uefert.system.pw}}
                </td>
                <td data-action="itemEdit" data-itemclass="uebernatuerliche_fertigkeit" data-itemid="{{uefert.id}}">
                    <i class="fas fa-edit"></i>
                </td>
                <td data-action="itemDelete" data-itemclass="uebernatuerliche_fertigkeit" data-itemid="{{uefert.id}}">
                    <i class="fas fa-trash"></i>
                </td>
            </tr>
            <tr id="ausklappen-view-{{uefert.id}}" class="hero-expandable-row-hidden">
                <td colspan="8" class="hero-expandable-row-cell">
                    <label class="hero-text-preformatted">{{{uefert.system.text}}}</label>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <br />

        <h2>Talente</h2>
        <a data-action="itemCreate" data-itemclass="zauber"><i class="fas fa-plus"></i> Neuer Zauber</a>
        <a data-action="itemCreate" data-itemclass="liturgie"><i class="fas fa-plus"></i> Neue Liturgie</a>

        <table class="table hero-table-full-width hero-table-font-compact">
            <thead>
                <tr>
                    <th class="icon-small"></th>
                    <th>Talent</th>
                    <th>Vorbereitung</th>
                    <th>Reichweite</th>
                    <th>Wirkungsd</th>
                    <th>Kosten</th>
                    <th class="hero-table-col-fixed-40">PW</th>
                    <th class="icon-small"></th>
                    <th class="icon-small"></th>
                </tr>
            </thead>
            <tbody>
                {{#each actor.uebernatuerlich.zauber as |magtal|}}
                <tr>
                    <td data-action="rollable" class="icon-small" data-rolltype="magie_diag" data-itemid="{{magtal.id}}">
                        <i class="custom-icon"></i>
                    </td>
                    <td>
                        <label data-action="ausklappView" class="onhover"
                            data-ausklappentarget="{{magtal.id}}">{{magtal.name}}</label>
                    </td>
                    <td>{{magtal.system.vorbereitung}}</td>
                    <td>{{magtal.system.reichweite}}</td>
                    <td>{{magtal.system.wirkungsdauer}}</td>
                    <td>{{magtal.system.kosten}}</td>
                    <td data-action="rollable" class="onhover" data-rolltype="zauber" data-talent="{{magtal.name}}"
                        data-pw="{{magtal.system.pw}}">
                        {{magtal.system.pw}}
                    </td>
                    <td data-action="itemEdit" data-itemclass="zauber" data-itemid="{{magtal.id}}">
                        <i class="fas fa-edit"></i>
                    </td>
                    <td data-action="itemDelete" data-itemclass="zauber" data-itemid="{{magtal.id}}">
                        <i class="fas fa-trash"></i>
                    </td>
                </tr>
                <tr id="ausklappen-view-{{magtal.id}}" class="hero-expandable-row-hidden">
                    <td colspan="9" class="hero-expandable-row-cell">
                        <div><b>Mächtige Magie: </b><span class="hero-text-preformatted">{{magtal.system.maechtig}}</span>
                        </div>
                        <div><b>Schwierigkeit: </b>{{magtal.system.schwierigkeit}}</div>
                        <div><b>Modifikationen: </b><span class="hero-text-preformatted">{{magtal.system.modifikationen}}</span></div>
                        <div><b>Ziel: </b>{{magtal.system.ziel}}</div>
                        <div><b>Beschreibung: </b><span class="hero-text-preformatted">{{{magtal.system.text}}}</span></div>
                    </td>
                </tr>

                {{/each}}

                {{#each actor.uebernatuerlich.liturgien as |kartal|}}
                <tr>
                    <td data-action="rollable" class="icon-small" data-rolltype="karma_diag" data-itemid="{{kartal.id}}">
                        <i class="custom-icon"></i>
                    </td>
                    <td>
                        <label data-action="ausklappView" class="onhover"
                            data-ausklappentarget="{{kartal.id}}">{{kartal.name}}</label>
                    </td>
                    <td>{{kartal.system.vorbereitung}}</td>
                    <td>{{kartal.system.reichweite}}</td>
                    <td>{{kartal.system.wirkungsdauer}}</td>
                    <td>{{kartal.system.kosten}}</td>
                    <td data-action="rollable" class="onhover" data-rolltype="liturgie" data-talent="{{kartal.name}}"
                        data-pw="{{kartal.system.pw}}">
                        {{kartal.system.pw}}
                    </td>
                    <td data-action="itemEdit" data-itemclass="liturgie" data-itemid="{{kartal.id}}">
                        <i class="fas fa-edit"></i>
                    </td>
                    <td data-action="itemDelete" data-itemclass="liturgie" data-itemid="{{kartal.id}}">
                        <i class="fas fa-trash"></i>
                    </td>
                </tr>
                <tr id="ausklappen-view-{{kartal.id}}" class="hero-expandable-row-hidden">
                    <td colspan="9" class="hero-expandable-row-cell">
                        <hr />
                        <div>
                            <div><b>Mächtige Magie: </b><span class="hero-text-preformatted">{{kartal.system.maechtig}}</span></div>
                            <div><b>Schwierigkeit: </b>{{kartal.system.schwierigkeit}}</div>
                            <div><b>Modifikationen: </b><span class="hero-text-preformatted">{{kartal.system.modifikationen}}</span></div>
                            <div><b>Ziel: </b>{{kartal.system.ziel}}</div>
                            <div><b>Beschreibung: </b><span class="hero-text-preformatted">{{{kartal.system.text}}}</span>
                            </div>
                        </div>
                        <hr />
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <h2>Traditionen und Vorteile</h2>
        {{#if actor.vorteil.zaubertraditionen}}
        <div>
            <label><b>Magische Traditionen:</b>&nbsp; | &nbsp;</label>
            {{#each actor.vorteil.zaubertraditionen}}
            <a data-action="itemEdit"
                data-itemid="{{this.id}}" data-tooltip="{{{this.system.text}}}">
                {{this.name}}
            </a>
            <a data-action="itemDelete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
            &nbsp; | &nbsp; {{/each}}
        </div>
        {{/if}} {{#if actor.vorteil.magie}}
        <div>
            <label><b>Magische Vorteile:</b>&nbsp; | &nbsp;</label>
            {{#each actor.vorteil.magie}}
            <a data-action="itemEdit"
                data-itemid="{{this.id}}" data-tooltip="{{{this.system.text}}}">
                {{this.name}}
            </a>
            <a data-action="itemDelete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
            &nbsp; | &nbsp; {{/each}}
        </div>
        {{/if}} {{#if actor.vorteil.geweihtentradition}}
        <div>
            <label><b>Karmale Traditionen:</b>&nbsp; | &nbsp;</label>
            {{#each actor.vorteil.geweihtentradition}}
            <a data-action="itemEdit"
                data-itemid="{{this.id}}" data-tooltip="{{{this.system.text}}}">
                {{this.name}}
            </a>
            <a data-action="itemDelete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
            &nbsp; | &nbsp; {{/each}}
        </div>
        {{/if}} {{#if actor.vorteil.karma}}
        <div>
            <label><b>Karmale Vorteile:</b>&nbsp; | &nbsp;</label>
            {{#each actor.vorteil.karma}}
            <a data-action="itemEdit"
                data-itemid="{{this.id}}" data-tooltip="{{{this.system.text}}}">
                {{this.name}}
            </a>
            <a data-action="itemDelete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
            &nbsp; | &nbsp; {{/each}}
        </div>
        {{/if}} {{#if actor.vorteil.tiergeist}}
        <div>
            <label><b>Tiergeist:</b>&nbsp; | &nbsp;</label>
            {{#each actor.vorteil.tiergeist}}
            <a data-action="itemEdit"
                data-itemid="{{this.id}}" data-tooltip="{{{this.system.text}}}">
                {{this.name}}
            </a>
            <a data-action="itemDelete" data-itemid="{{this.id}}"><i class="fas fa-trash"></i></a>
            &nbsp; | &nbsp; {{/each}}
        </div>
        {{/if}}
    </div>
</section>