{{log 'inventar' this}}
<section class="tab inventar {{tab.cssClass}}" data-group="primary" data-tab="inventar">
    <div class="flexrow">
        <label>Dukaten</label>
        <input
            name="system.geld.dukaten"
            value="{{actor.system.geld.dukaten}}"
            type="text"
            data-dtype="Number"
        />
        <label>Silbertaler</label>
        <input
            name="system.geld.silbertaler"
            value="{{actor.system.geld.silbertaler}}"
            type="text"
            data-dtype="Number"
        />
        <label>Heller</label>
        <input
            name="system.geld.heller"
            value="{{actor.system.geld.heller}}"
            type="text"
            data-dtype="Number"
        />
        <label>Kreuzer</label>
        <input
            name="system.geld.kreuzer"
            value="{{actor.system.geld.kreuzer}}"
            type="text"
            data-dtype="Number"
        />
        <button data-action="clickable" data-clicktype="shorten_money" type="button">
            zusammenrechnen
        </button>
    </div>

    <br />

    <a data-action="itemCreate" data-itemclass="gegenstand">
        <i class="fas fa-plus"></i>
        Neuer Gegenstand
    </a>


    {{> systems/Ilaris/scripts/actors/templates/held/tabs/inventory/supporting.hbs}}
    <br />
    {{> systems/Ilaris/scripts/actors/templates/held/tabs/inventory/carrying.hbs}}
    <br />
    {{> systems/Ilaris/scripts/actors/templates/held/tabs/inventory/handcart.hbs}}
</section>
