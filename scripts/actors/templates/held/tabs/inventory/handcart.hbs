{{#each actor.inventar.item_list as |itemContainer key|}}
<h2>{{itemContainer.name}}</h2>
<a class="icon-small" data-action="itemEdit" data-itemid="{{itemContainer.id}}"><i class="fas fa-edit"></i></a>
<a class="icon-small" data-action="itemDelete" data-itemid="{{itemContainer.id}}"
    ><i class="fas fa-trash"></i
></a>
<div class="flexrow">
    <label><b>Name</b></label>
    <label><b>{{get_label "quantity"}}</b></label>
    {{#if ../isWeaponSpaceRequirementActive}}
        <label><b>{{get_label "gewicht"}}</b></label>
        <label data-tooltip="{{get_label 'tooltipCapacityLimitHandcart'}}" class="{{#if (ifGt itemContainer.system.gewicht_summe (multMinusOne itemContainer.system.gewicht))}}maximum-load-exceeded{{/if}}"><b> {{itemContainer.system.gewicht_summe}} / {{multMinusOne itemContainer.system.gewicht}}</b></label>
    {{/if}}
    <label></label>
    <label class="icon-small"></label>
    <label class="icon-small"></label>
</div>
<div class="twokindrow">
    {{#each itemContainer.system.bewahrt_auf as |item key|}}
    <div class="flexrow">
        <label>{{item.name}}</label>
        <label>{{item.system.quantity}}</label>
        {{#if ../../isWeaponSpaceRequirementActive}}
            <label>{{item.system.gewicht}}</label>
            <label></label>
        {{/if}}
        <label></label>
        <a class="icon-small" data-action="itemEdit" data-itemid="{{item.id}}"><i class="fas fa-edit"></i></a>
        <a class="icon-small" data-action="itemDelete" data-itemid="{{item.id}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
</div>
<br />
{{/each}}
